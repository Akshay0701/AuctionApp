<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerAccount">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/requestBox"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Add New Product"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryblack"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:hint="Product Name"
                    android:textColorHighlight="@color/colorPrimaryblack"
                    android:inputType="text"
                    android:textColorHint="@color/colorPrimaryblack"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/addProduct_pName"
                    android:layout_height="wrap_content"></EditText>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:textColorHighlight="@color/colorPrimaryblack"
                    android:hint="Product Description"
                    android:inputType="text"
                    android:textColorHint="@color/colorPrimaryblack"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/addProduct_desc"
                    android:layout_height="wrap_content"></EditText>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:hint="Minimum Price"
                    android:textColorHighlight="@color/colorPrimaryblack"
                    android:textColorHint="@color/colorPrimaryblack"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/addProduct_miniPrice"
                    android:layout_height="wrap_content"></EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Auction Time :"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryblack"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"></TextView>
                    <EditText
                        android:id="@+id/autionTime"
                        android:layout_width="wrap_content"
                        android:inputType="numberDecimal"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorPrimaryblack"
                        android:textColor="@color/colorPrimary"
                        android:hint="Minutes"
                        android:layout_height="wrap_content"></EditText>
                </LinearLayout>
                <TextView
                    android:text="Select Image"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryblack"
                    android:layout_marginLeft="7dp"

                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:id="@+id/selected_img"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_height="200dp"></ImageView>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:layout_marginBottom="60dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/add_productBtn"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>